<?xml version="1.0" ?>
<robot name="jupiter_simple" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- 베이스 footprint (지면과의 기준점) -->
  <link name="base_footprint"/>
  
  <!-- 베이스 링크 (단순화된 박스 모양) -->
  <link name="base_link">
    <inertial>
      <!-- jupiter_library에서 발견한 정밀 관성 파라미터 적용 -->
      <origin xyz="-0.011 0.0002 -0.00832" rpy="0 0 0"/>
      <mass value="1.1011218463245"/>
      <inertia ixx="0.00683403160871643" ixy="-1.43326126624159E-06" 
               ixz="0.000665507738691208" iyy="0.0091844048006001" 
               iyz="3.7191085325542E-06" izz="0.0114582299070878"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <!-- 복잡한 STL 메시 대신 단순한 박스 -->
        <box size="0.20 0.15 0.08"/>
      </geometry>
      <material name="green">
        <color rgba="0 0.8 0 0.8"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <box size="0.20 0.15 0.08"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.08" rpy="0 0 0"/>
  </joint>
  
  <!-- 왼쪽 바퀴 (단순한 실린더) -->
  <link name="left_wheel_link">
    <inertial>
      <!-- 실린더형 바퀴의 정확한 관성 파라미터 -->
      <!-- 반지름: 0.035m, 길이: 0.02m, 질량: 0.15kg -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.0000460" ixy="0" ixz="0" 
               iyy="0.0000921" iyz="0" 
               izz="0.0000460"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel_link"/>
    <origin xyz="0 0.0855 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <!-- 오른쪽 바퀴 (단순한 실린더) -->
  <link name="right_wheel_link">
    <inertial>
      <!-- 실린더형 바퀴의 정확한 관성 파라미터 -->
      <!-- 반지름: 0.035m, 길이: 0.02m, 질량: 0.15kg -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.0000460" ixy="0" ixz="0" 
               iyy="0.0000921" iyz="0" 
               izz="0.0000460"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
      <material name="black">
        <color rgba="0.2 0.2 0.2 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.02"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel_link"/>
    <origin xyz="0 -0.0855 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  
  <!-- LiDAR 센서 (단순한 실린더) -->
  <link name="laser">
    <inertial>
      <!-- 실린더형 LiDAR의 정확한 관성 파라미터 -->
      <!-- 반지름: 0.025m, 높이: 0.04m, 질량: 0.08kg -->
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <mass value="0.08"/>
      <inertia ixx="0.0000213" ixy="0" ixz="0" 
               iyy="0.0000213" iyz="0" 
               izz="0.0000250"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 0.8 1"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0.02" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.025" length="0.04"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="laser_joint" type="fixed">
    <parent link="base_link"/>
    <child link="laser"/>
    <!-- 라이다 후방 설치: 물리적 위치와 방향 정의
         yaw=180° (π): 라이다 프레임이 로봇 후방(-X)을 향함
         TF가 laser 프레임 → base_link 변환을 자동 처리 -->
    <origin xyz="-0.03 0 0.13" rpy="0 0 0"/>
  </joint>
  
  <!-- IMU 센서 (시각적으로 표시하지 않음) -->
  <link name="imu_link">
    <inertial>
      <!-- 소형 IMU 센서의 정확한 관성 파라미터 -->
      <!-- 크기: 2cm x 2cm x 0.5cm, 질량: 0.005kg -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="0.0000004" ixy="0" ixz="0" 
               iyy="0.0000004" iyz="0" 
               izz="0.0000007"/>
    </inertial>
  </link>
  
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>  <!-- IMU 정방향 (각속도는 driver에서 부호 반전 처리) -->
  </joint>
  
  <!-- 간단한 카메라/센서 표현 (작은 박스) -->
  <link name="camera_link">
    <inertial>
      <!-- 소형 카메라의 정확한 관성 파라미터 -->
      <!-- 크기: 3cm x 8cm x 3cm, 질량: 0.03kg -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.03"/>
      <inertia ixx="0.0000063" ixy="0" ixz="0" 
               iyy="0.0000030" iyz="0" 
               izz="0.0000063"/>
    </inertial>
    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0 0 0.8"/>
      </material>
    </visual>
    
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.03 0.08 0.03"/>
      </geometry>
    </collision>
  </link>
  
  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.08 0 0.10403" rpy="0 0 -0.05"/>
  </joint>
  
</robot>